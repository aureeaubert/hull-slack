{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "globals": {
    "Hull": true
  },
  "settings": {
    "ecmascript": 6,
    "import/extensions": [".js"]
  },
  "extends": [
    "plugin:flowtype/recommended"
  ],
  "plugins": ["prettier", "flowtype"],
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "worker": true,
    "mongo": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": false,
        "arrowParens": "avoid",
        "semi": true
      }
    ],
    "arrow-parens": [0],
    "prefer-arrow-callback": [1],
    "new-cap": [0],
    "no-unused-vars": [1],
    "no-underscore-dangle": [0],
    "arrow-body-style": [0],
    "no-param-reassign": [0],
    "no-console": [1],
    "eqeqeq": [1],

    "flowtype/no-primitive-constructor-types": 2,
    "flowtype/no-types-missing-file-annotation": 2,
    "flowtype/require-valid-file-annotation": [
      1,
      "always",
      {
        "annotationStyle": "line"
      }
    ]
  }
}
